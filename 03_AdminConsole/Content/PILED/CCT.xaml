<UserControl x:Class="LightLifeAdminConsole.Content.PILED.CCT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" >

    <Grid Style="{StaticResource ContentRoot}" Margin="0">
        <ScrollViewer>
            <StackPanel>
                <StackPanel Orientation="Horizontal">            
                    <TextBlock Text="CCT:" Style="{StaticResource Heading2}" Margin="10" />
                    <TextBox  x:Name="txtCCT"  Width="100" Margin="10" Text="{Binding Path=CCT, Mode=TwoWay}" MaxLength="4"/>                    
                </StackPanel>
                <Slider x:Name="slCCT" Width="500" Margin="10" Minimum="2500" Maximum="7000" IsSnapToTickEnabled="True" TickFrequency="25" Value="{Binding Path=CCT, Mode=TwoWay, Delay=200}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
