                <mui:Link DisplayName="----------" Source="/" />
                <mui:Link DisplayName="Rollen" Source="/Content/Admin/Roles.xaml#LLRole" />
                <mui:Link DisplayName="Räume" Source="/Content/Admin/Rooms.xaml#LLRooms" />
                <mui:Link DisplayName="Gruppen" Source="/Content/Admin/Groups.xaml" />
                <mui:Link DisplayName="Leuchten" Source="/Content/Admin/Lights.xaml" />
                <mui:Link DisplayName="Szenen" Source="/Content/Admin/Scenes.xaml" />
                <mui:Link DisplayName="Gruppen" Source="/Content/Admin/Groups.xaml" />
            </mui:ModernTab.Links>
