<mui:ModernWindow x:Class="LightLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="Light Life - Admin Console" IsTitleVisible="True"        
        Width="Auto" Height="Auto" SizeToContent="WidthAndHeight" Loaded="ModernWindow_Loaded" Icon="/Images/faviconCAIE033I.ico" Closing="ModernWindow_Closing">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Login">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="" Source="/Pages/Login.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Administration">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Administration" Source="/Pages/Administration.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>  
        <mui:LinkGroup DisplayName="PI-LED Control">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="CCT/XY" Source="/Content/PILED/XY.xaml" />
                <mui:Link DisplayName="RGB" Source="/Content/PILED/RGB.xaml" />
                <mui:Link DisplayName="CCT" Source="/Content/PILED/CCT.xaml" />
                <mui:Link DisplayName="Scenes" Source="/Content/PILED/Scenes.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>        
        <mui:LinkGroup DisplayName="Logging">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Logging" Source="/Pages/Logging.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="About" Source="/Pages/Settings.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="About" Source="/Pages/Settings.xaml" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
