<UserControl x:Class="LightLifeAdminConsole.Pages.ControlBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d">
    <Grid Style="{StaticResource ContentRoot}">
        <DataGrid x:Name="dgBoxOverview" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" MouseLeftButtonUp="dgBoxOverview_MouseLeftButtonUp">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="mnuPing" Header="Ping" Click="mnuPing_Click" />
                    <MenuItem x:Name="mnuReset" Header="Reset Box" Click="mnuReset_Click"/>
                    <MenuItem x:Name="mnuReboot"  Header="Reboot Raspi" Click="mnuReboot_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</UserControl>
