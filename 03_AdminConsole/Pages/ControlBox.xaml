<UserControl x:Class="LightLifeAdminConsole.Pages.ControlBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="Tab" SelectedSource="/Content/Boxes/Box.xaml#1">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Box #1" Source="/Content/Boxes/Box.xaml#1"/>
                <mui:Link DisplayName="Box #2" Source="/Content/Boxes/Box.xaml#2"/>
                <mui:Link DisplayName="Box #3" Source="/Content/Boxes/Box.xaml#3"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
